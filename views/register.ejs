<%- include('partials/header') %>

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="container">
    <h1 class="text-center mb-4">Register</h1>

    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow rounded-3">
          <div class="card-body">
            <% if (typeof errorMessage !== 'undefined') { %>
              <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>

            <form action="/register" method="POST">
              <div class="form-group mb-3">
                <label for="name">Full Name</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="name" 
                  name="name" 
                  placeholder="Enter your name"
                  required
                  value="<%= formData ? formData.name : '' %>">
              </div>

              <div class="form-group mb-3">
                <label for="email">Email</label>
                <input 
                  type="email" 
                  class="form-control" 
                  id="email" 
                  name="email" 
                  placeholder="Enter your email"
                  required
                  value="<%= formData ? formData.email : '' %>">
              </div>

              <div class="form-group mb-4">
                <label for="password">Password</label>
                <input 
                  type="password" 
                  class="form-control" 
                  id="password" 
                  name="password" 
                  placeholder="Create a password"
                  required>
                <small class="form-text text-muted">
                  Must be 6â€“8 characters and include uppercase, lowercase, and a number.
                </small>
              </div>

              <button type="submit" class="btn btn-dark btn-block w-100">Register</button>
              <p class="mt-3 text-center">Already have an account? <a href="/login">Login</a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
