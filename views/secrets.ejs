<%- include('partials/header') %>

<div class="container secrets-list">
  <h1 class="text-center mb-4">My Secrets</h1>

  <% if (secretsList.length === 0) { %>
    <p class="text-center text-muted">You haven't shared any secrets yet.</p>
  <% } else { %>
    <% secretsList.forEach(secret => { %>
      <div class="secret-item">
        <%= secret.secret %>
      </div>
    <% }) %>
  <% } %>

  <div class="text-center mt-5">
    <a href="/submit" class="btn btn-dark me-2">Submit a Secret</a>
    <a href="/logout" class="btn btn-outline-dark">Logout</a>
  </div>
</div>

<%- include('partials/footer') %>
